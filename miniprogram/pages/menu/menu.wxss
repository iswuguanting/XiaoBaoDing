page{
    background-color: #e3e3e3;
}
page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid rgb(196, 196, 196);
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #e3e3e3;
}
.categroy-left .cate-list.on{
    color: #857351;
    border-color: #574c38;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-bosing{
    width: 100%;
    height: 850rpx;
    display: flex;
    overflow: hidden;
}

.bosingone{
    width: 100%;
    height: 850rpx;
    overflow: auto;
}

.continiu{
    float: left;
    width: 260rpx;
    height: 260rpx;
}
.continiu-top{
    width: 100%;
    height: 200rpx;
    position: relative;
}
.continiu-top image{
    width: 160rpx;
    height: 160rpx;
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    border-radius: 30rpx;
}

.continiu-name{
    width: 100%;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}
.cate-box{
    height: 100%;
    padding:40rpx;
    box-sizing: border-box;
}
.cate-box1 view image{
    width: 200rpx;
    height: 200rpx;
    background-color: aqua;
    margin: 10rpx;
    display: flex;
    white-space: nowrap;
    border-radius: 20rpx;
}
.cate-box1 view text{
    margin-left: 65rpx;
}
.cate-box1 view {
    margin: 40rpx 0;
}
.cate-box .cate-box1{
    display: flex;
    white-space: nowrap;
}
.cate-box .cate-box1 view{
    width: 100%;
    height: 190rpx;
}
.cate-box .cate-banner image{
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}